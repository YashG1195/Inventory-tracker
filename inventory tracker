class Inventory:
    def __init__(self):
        self.items = {}

    def add_item(self, item_name, quantity, price):
        if item_name in self.items: 
            self.items[item_name] += quantity
        else:
            self.items[item_name] = {'quantity': quantity, 'price': price}

    def remove_item(self, item_name, quantity):
        if item_name in self.items:
            if self.items[item_name]['quantity'] >= quantity:
                self.items[item_name]['quantity'] -= quantity
            else:
                print("Insufficient quantity to remove.")
        else:
            print("Item not found.")

    def display_inventory(self):
        print("Inventory:")
        for name, details in self.items.items():
            print(f"{name}: Quantity: {details['quantity']}, Price: ${details['price']}")

def main():
    inventory = Inventory()

    while True:
        print("\nChoose an action:")
        print("1. Add item")
        print("2. Remove item")
        print("3. Display inventory")
        print("4. Exit")

        choice = input("Enter your choice: ")

        if choice == "1":
            item_name = input("Enter item name: ")
            quantity = int(input("Enter quantity to add: "))
            price = float(input("Enter price of the item: "))
            inventory.add_item(item_name, quantity, price)
        elif choice == "2":
            item_name = input("Enter item name: ")
            quantity = int(input("Enter quantity to remove: "))
            inventory.remove_item(item_name, quantity)
        elif choice == "3":
            inventory.display_inventory()
        elif choice == "4":
            break
        else:
            print("Invalid choice.")

if __name__ == "__main__":
    main()
